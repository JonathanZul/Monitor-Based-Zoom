{
    "manifest_version": 2,
    "name": "Dynamic Monitor Zoom",
    "version": "1.0",
    "description": "Adjusts zoom levels based on which monitor a window is on.",
    "permissions": [
      "tabs",
      "windows",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "32": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["debugOverlay.js"],
        "run_at": "document_end"
      }
    ]
  }
  