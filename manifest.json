{
    "manifest_version": 2,
    "name": "Monitor-Based Zoom",
    "version": "1.2",
    "description": "Automatically adjusts page zoom based on monitor resolution.",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "32": "icon.png"
      }
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    }
  }
  